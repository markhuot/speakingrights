{% set styles = styles("news/teaser.css.json") %}
{% set spacing = styles("layouts/spacing.css.json") %}

<a href="{{ entry.url }}">
    <div class="{{ spacing.small }}">
        <a href="{{ entry.url }}" class="{{ styles.link }}" class="{{ spacing.small }}">
            <div>
                <div class="{{ styles.image }}">
                    {% include "news/_image" with {"image": entry.image, "transform": {"mode": "crop", "width": 600, "height": 360}} only %}
                    {% include "components/tags" with {"entry": entry} only %}
                </div>
                {% if entry.communityActionProject.total %}
                    <p class="{{ styles.projectName }}" style="line-height: 1.4">{{ entry.communityActionProject.first.title }}</p>
                {% else %}
                    <p class="{{ styles.projectName }}" style="line-height: 1.4">EQUITAS Blog</p>
                {% endif %}
            </div>
            <p class="{{ styles.heading }}"><strong>{{ localeField(entry, 'title') }}</strong></p>
        </a>
        <div class="{{ styles.summary }}">
            {{ localeField(entry, 'excerpt') }}
        </div>
    </div>
</a>