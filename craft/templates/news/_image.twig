{% if image.count %}
    <img src="{{ transform is defined ? image.first.url(transform) : image.first.url }}" alt="{{ image.first.alternativeText|default('') }}">
{% else %}
    {% if locale() == 'fr' %}
        <img src="/images/no-image-fr.jpg" alt="">
    {% else %}
        <img src="/images/no-image.jpg" alt="">
    {% endif %}
{% endif %}