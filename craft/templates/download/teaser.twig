{% set styles = styles("news/teaser.css.json") %}
{% set spacing = styles("layouts/spacing.css.json") %}

<a href="{{ entry.url }}">
    <div class="{{ spacing.small }}">
        <a href="{{ entry.url }}" class="{{ spacing.small }}">
            <div>
                <p class="{{ styles.image }}">
                    <img src="{{ entry.image.first.url({"mode": "crop", "width": 600, "height": 360}) }}" alt="{{ entry.image.first.description }}">
                </p>
            </div>
            <p class="{{ styles.heading }}"><strong>{{ entry.title }}</strong></p>
        </a>
    </div>
</a>