{% extends "layouts/default" %}

{% set styles = styles("cap/cap.css.json") %}
{% set spacing = styles("layouts/spacing.css.json") %}
{% set entry = craft.entries.slug(slug).first %}
{% set heroLabel = 'Photos' %}
{% set shortHero = true %}
{% paginate entry.photos.limit(20) as pageInfo, photos %}

{% use "cap/hero" %}

{% block main %}
    {% include "cap/_crumbs" with {
        "cap": entry,
    } %}
    {% include "components/photos" with {"photos": photos} only %}
    {% include "components/pagination" with {"pageInfo": pageInfo} only %}
{% endblock %}

{% block sidebar %}
    {% include "blocks/signup" %}
{% endblock %}