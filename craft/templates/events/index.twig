{% extends "layouts/default" %}

{% set styles = styles("resources/entry.css.json") %}
{% set spacing = styles("layouts/spacing.css.json") %}
{% set shortHero = true %}
{% set heroLabel = "Events"|t %}
{% set heroButton = {"url": "/events/past", "title": "Past events"|t} %}
{% set perPage = 6 %}
{% paginate craft.entries.section('events').order('startDate asc').endDate('and, > ' ~ now|format('Y-m-d')).limit(perPage) as pageInfo, events %}

{% use "cap/hero" %}

{% block main %}
    {% include "events/_listing" with {"items": events} only %}
    {% include "components/pagination" with {"pageInfo": pageInfo} only %}
{% endblock %}

{% block sidebar %}
    {% include "components/mailingListSignup" %}
{% endblock %}