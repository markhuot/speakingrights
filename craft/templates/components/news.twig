{% set styles = styles("components/news.css.json") %}
{% set spacing = styles("layouts/spacing.css.json") %}

<div class="{{ styles.container }} {{ spacing.heading }}">
    <h3 class="{{ styles.heading }}">News</h3>
    <ul class="{{ spacing.default }}">
    {% for entry in craft.entries.section('news').limit(3) %}
        <li class="{{ styles.item }}">
            <a href="{{ entry.url }}">
                <p class="{{ styles.subheading }}">{{ entry.title }}</p>
                {{ entry.excerpt }}
            </a
        </li>
    {% endfor %}
    </ul>
</div>