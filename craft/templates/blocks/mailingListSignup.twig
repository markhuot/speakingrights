{% set styles = styles("blocks/mailingListSignup.css.json") %}
{% set spacing = styles("layouts/spacing.css.json") %}

<div class="{{ styles.background }} {{ spacing.providesOwnSpacing }}">
    <div class="{{ styles.container }}">
        <div class="{{ styles.left }}">
            <img src="/images/mail.svg" class="{{ styles.image }}" alt="">
        </div>
        <div class="{{ styles.right }}" id="mc_embed_signup">
            <form action="//equitas.us15.list-manage.com/subscribe/post?u=eb69b441b62907cb8ef2ed1d0&amp;id=9797882fb8" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
                <div id="mc_embed_signup_scroll" class="{{ spacing.heading }}">
                    <h3><label class="{{ styles.heading }}" for="mce-EMAIL">{{ block.heading }}</label></h3>
                    <div>
                        <input class="{{ styles.input }}" type="email" value="" name="EMAIL" id="mce-EMAIL" placeholder="Email address" required>
                        <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                        <span style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_eb69b441b62907cb8ef2ed1d0_9797882fb8" tabindex="-1" value=""></span>
                        <input class="{{ styles.button }}" type="submit" value="{{ 'Sign Up'|t }}" name="subscribe" id="mc-embedded-subscribe" class="button">
                    </div>
                </div>
            </form>
        </div>
        <!--End mc_embed_signup-->
    </div>
</div>